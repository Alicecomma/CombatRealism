<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <StatDef>
    <defName>Weight</defName>
    <label>weight</label>
    <description>The weight of an object when carried in a bag or pocket.</description>
    <category>BasicsNonPawn</category>
    <defaultBaseValue>1</defaultBaseValue>
    <toStringStyle>FloatTwo</toStringStyle>
    <formatString>{0} kg</formatString>
    <displayPriorityInCategory>10</displayPriorityInCategory>
  </StatDef>

  <StatDef>
    <defName>Bulk</defName>
    <label>bulk</label>
    <description>The amount of space an item takes up when carried in bag or pocket.</description>
    <category>BasicsNonPawn</category>
    <defaultBaseValue>1</defaultBaseValue>
    <toStringStyle>FloatTwo</toStringStyle>
    <displayPriorityInCategory>10</displayPriorityInCategory>
  </StatDef>
  
</Defs>